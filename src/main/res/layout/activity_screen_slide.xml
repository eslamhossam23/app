<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cheopspyramid"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.timprojet.affichagedinformationssuruneimage.Arrow
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/arrow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.timprojet.affichagedinformationssuruneimage.Arrow
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/arrow_inverted"
        android:rotation="180"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/arrow" />

    <com.timprojet.affichagedinformationssuruneimage.VerticalViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.timprojet.affichagedinformationssuruneimage.VerticalViewPager>

</RelativeLayout>